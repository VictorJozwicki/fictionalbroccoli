<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="fictionalbroccoli.Views.BrocoBonus">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="text" TargetType="Label">
                <Setter Property="Font" Value="Large"/>
                <Setter Property="TextColor" Value="{StaticResource lighterFont}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
    <StackLayout Margin="50">
        <Label Text="Bonus" Font="50" TextColor="{StaticResource normalFont}"/>
        <Label Text="- Recherche (fonctione avec le nom ou le tag)" Style="{StaticResource text}"/>
        <Label Text="- Un design magnifique et rafraichissant" Style="{StaticResource text}"/>
        <Label Text="On a passé 10h à essayer de configurer la map :(" TextColor="{StaticResource thirdFont}"/>
    </StackLayout>
</ContentPage>